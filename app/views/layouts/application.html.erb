<!DOCTYPE html>
<html>
<head>
  <title>Catering Grauer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<nav class="navbar navbar-inverse " role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><%= image_tag("logo_inv.png", size: "124x55") %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if user_signed_in? && current_school %>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Familias', school_families_path(current_school) %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menúes<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">Administrar Platos</a></li>
            <li><a href="#">Administrar Menúes</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Facturación<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">Mensual</a></li>
            <li><a href="#">Diaria</a></li>
          </ul>
        </li>
        <li><a href="#">Imprimir Archivos</a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.firstname + ' ' + current_user.lastname %> <% if current_school %> (<%= current_school.name.upcase %>) <% end %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Mi Perfil', edit_user_registration_path %></li>
            <li><%= link_to 'Cambiar de Escuela', schools_path %></li>
            <li class="divider"></li>
            <% if current_user.try(:admin?) %>
              <li><a href="#">Administrar Usuarios</a></li>
              <li class="divider"></li>
            <% end %>
            <li><%= link_to 'Salir', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Ingresar', new_user_session_path %></li>
        </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>




<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>




<%= yield %>

</body>
</html>
