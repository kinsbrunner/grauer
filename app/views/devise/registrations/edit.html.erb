<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 box">
  <h2 class="text-center">Modificar <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, required: true, autofocus: true %>
      <%= f.input :firstname, required: true %>
      <%= f.input :lastname, required: true %>
      <%= f.input :email, required: true %>
      <%= f.input :password, autocomplete: "off", hint: "no completar en caso de que no desee modificarla", required: false %>
      <%= f.input :password_confirmation, required: false %>
    </div>

    <div class="form-actions">
      <%= f.input :current_password, hint: "Ingrese su contraseÃ±a actual para modificar los datos", required: true %>
      <%= f.button :submit, "Modificar", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>