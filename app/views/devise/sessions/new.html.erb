<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 box">
  <h2 class="text-center">Catering Grauer</h2>
  <br />

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :username, required: false, autofocus: true %>
      <br />
      <%= f.input :password, required: false %>
      <br />
      <br />
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Ingresar", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
  <br />
  <%= link_to "Olvidó su contraseña?", new_password_path(resource_name), class:"pull-right" %><br />
</div>