<div class='col-xs-10 col-xs-offset-1'>

  <h1 class="pull-left'">
    Facturación Mensual
    <%= link_to new_bill_path, class: 'btn btn-primary pull-right' do %>
      <span class="glyphicon glyphicon-plus"></span> 
      Facturar Mes
    <% end %>
  </h1>
  <div class='seccion table-responsive'>
    <table class="datatable table table-striped table-hover table-condensed table-bordered display nowrap" width="100%">
      <thead>
        <tr>
          <th>Período</th>
          <th>Grupo 1</th>
          <th>Grupo 2</th>
          <th>Grupo 3</th>
          <th>Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @bills_monthly.each do |bm| %>
          <tr>
            <td><%= l bm.periodo, format: :mes_anio %></td>
            <td><%= bm.limite_grp_1.nil? ? '-' : 'Hasta ' + bm.humanized_limite_grp_1 + ':' + number_to_currency(bm.valor_1) %></td>
            <td><%= bm.limite_grp_2.nil? ? '-' : 'Hasta ' + bm.humanized_limite_grp_2 + ':' + number_to_currency(bm.valor_2) %></td>
            <td><%= bm.limite_grp_3.nil? ? '-' : 'Hasta ' + bm.humanized_limite_grp_3 + ':' + number_to_currency(bm.valor_3) %></td>
            <td>
                <%= link_to bill_path(bm), method: :delete, data: {confirm:'IMPORTANTE: Al eliminar esta Factura, se borrarán todos los movimientos generados por esta. ¿Está seguro que desea eliminarla?'} do %>
                <span class="glyphicon glyphicon-trash"></span>
            <% end %>
            </td>
          </tr>
        <% end %>

        <% if @bills_monthly.empty? %>
          <tr>
            <td colspan='4'>No hay facturas por mostrar</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class='clearfix'></div>
  </div>

  <br /><br />

  <h1 class="pull-left'">
    Facturación Diaria
  </h1>

  <div class='seccion table-responsive'>
    <table class='table table-condensed table_margin_off'>
      <thead>
        <tr>
          <th>Período</th>
          <th>Grupo 1</th>
          <th>Valor </th>
          <th>Grupo 2</th>
          <th>Valor</th>
          <th>Grupo 3</th>
          <th>Valor</th>
        </tr>
      </thead>

      <tbody>
        <% @bills_monthly.each do |bm| %>
          <tr>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
          </tr>
        <% end %>

        <% if @bills_monthly.empty? %>
          <tr>
            <td colspan='7'>No hay facturas por mostrar</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class='clearfix'></div>
  </div>

</div>

<script>
$(document).ready(function(){
  $('.datatable').DataTable( {
        responsive: true,
        "language": {
            "sProcessing":     "Procesando...",
            "sLengthMenu":     "Mostrar _MENU_ registros",
            "sZeroRecords":    "No se encontraron resultados",
            "sEmptyTable":     "Ningún dato disponible en esta tabla",
            "sInfo":           "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
            "sInfoEmpty":      "Mostrando registros del 0 al 0 de un total de 0 registros",
            "sInfoFiltered":   "(filtrado de un total de _MAX_registros)",
            "sInfoPostFix":    "",
            "sSearch":         "Buscar:",
            "sUrl":            "",
            "sInfoThousands":  ",",
            "sLoadingRecords": "Cargando...",
            "oPaginate": {
              "sFirst":    "Primero",
              "sLast":     "Ultimo",
              "sNext":     "Siguiente",
              "sPrevious": "Anterior"
            },
            "oAria": {
              "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
              "sSortDescending": ": Activar para ordenar la columna de manera descendente"
            },
            "decimal": ",",
            "thousands": "."
        }
    });
});
</script>
