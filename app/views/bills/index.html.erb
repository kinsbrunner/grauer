<div class='col-xs-10 col-xs-offset-1'>

  <h1 class="pull-left'">
    Facturación Mensual
    <%= link_to new_bill_path, class: 'btn btn-primary pull-right' do %>
      <span class="glyphicon glyphicon-plus"></span> 
      Facturar Mes
    <% end %>
  </h1>

  <div class='seccion table-responsive'>
    <table class='table table-condensed table_margin_off'>
      <thead>
        <tr>
          <th>Período</th>
          <th>Grupo 1</th>
          <th>Valor </th>
          <th>Grupo 2</th>
          <th>Valor</th>
          <th>Grupo 3</th>
          <th>Valor</th>
        </tr>
      </thead>

      <tbody>
        <% @bills_monthly.each do |bm| %>
          <tr>
            <td><%= l bm.periodo.in_time_zone('Buenos Aires'), format: :mes_anio %></td>
            <td><%= bm.limite_grp_1.nil? ? '-' : bm.limite_grp_1 %></td>
            <td><%= bm.valor_1.nil? ? '-' : number_to_currency(bm.valor_1) %></td>
            <td><%= bm.limite_grp_2.nil? ? '-' : bm.limite_grp_2 %></td>
            <td><%= bm.valor_2.nil? ? '-' : number_to_currency(bm.valor_2) %></td>
            <td><%= bm.limite_grp_3.nil? ? '-' : bm.limite_grp_3 %></td>
            <td><%= bm.valor_3.nil? ? '-' : number_to_currency(bm.valor_3) %></td>
          </tr>
        <% end %>

        <% if @bills_monthly.empty? %>
          <tr>
            <td colspan='7'>No hay facturas por mostrar</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class='clearfix'></div>
  </div>

  <br /><br />

  <h1 class="pull-left'">
    Facturación Diaria
  </h1>

  <div class='seccion table-responsive'>
    <table class='table table-condensed table_margin_off'>
      <thead>
        <tr>
          <th>Período</th>
          <th>Grupo 1</th>
          <th>Valor </th>
          <th>Grupo 2</th>
          <th>Valor</th>
          <th>Grupo 3</th>
          <th>Valor</th>
        </tr>
      </thead>

      <tbody>
        <% @bills_monthly.each do |bm| %>
          <tr>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
            <td><%= 'BLALBA' %></td>
          </tr>
        <% end %>

        <% if @bills_monthly.empty? %>
          <tr>
            <td colspan='7'>No hay facturas por mostrar</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class='clearfix'></div>
  </div>

</div>
