<div class="col-xs-12 col-md-6 col-md-offset-3">
  <%= link_to new_user_registration_path, class: "btn btn-primary pull-right" do %>
    <span class="glyphicon glyphicon-plus"></span> 
    Usuario
  <% end %> 
</div>
<div class="col-xs-12 col-md-6 col-md-offset-3 marco">
    <br />
    <table class="datatable table table-striped table-hover table-condensed table-bordered display nowrap" width="100%">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Usuario</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>