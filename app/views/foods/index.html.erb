<div class="col-xs-10 col-xs-offset-1">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#myFoodModal">
    <span class="glyphicon glyphicon-plus"></span> 
    Plato
  </button>  
</div>
<div class="col-xs-4 col-xs-offset-4 marco">
    <br />
    <table class="datatable table table-striped table-hover table-condensed table-bordered display nowrap" width="100%">
    <thead>
      <tr>
        <th>Plato</th>
        <th>Tipo de Plato</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.comida %></td>
          <td><%= food.humanized_tipo %></td>
          <td>
            <%= link_to food_path(food), method: :delete, data: {confirm:'¿Está seguro que desea eliminar esta comida?'} do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @foods %>
  </div>
</div>



<!-- Food Modal -->
<div class="modal fade" id="myFoodModal" tabindex="-1" role="dialog" aria-labelledby="myFoodModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myFoodModalLabel">Nuevo Plato</h4>
      </div>
      <%= simple_form_for @food, url: foods_path do |f| %>
      <div class="modal-body">
          <%= f.input :comida, label: 'Plato' %>
          <br />
          <%= f.input :tipo, as: :select, collection: Food::TIPO_COMIDAS, label: 'Tipo de Plato' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <%= f.submit 'Agregar', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>