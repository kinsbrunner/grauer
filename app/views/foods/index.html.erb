<div class="col-xs-10 col-xs-offset-1">
  <%= link_to new_school_food_path(current_school), class: "btn btn-primary pull-right" do %>
    <span class="glyphicon glyphicon-plus"></span> 
    Plato
  <% end %>
</div>
<div class="col-xs-10 col-xs-offset-1 marco">
    <br />
    <table class="datatable table table-striped table-hover table-condensed table-bordered display nowrap" width="100%">
    <thead>
      <tr>
        <th>Plato</th>
        <th>Tipo de Plato</th>
        <th>Incluir siempre</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.plato %></td>
          <td><%= food.humanized_tipo %></td>
          <td><%= food.siempre %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @foods %>
  </div>
</div>