<div class="col-xs-12 col-md-6 col-md-offset-3">
  <h1>Familia <%= current_family.apellido %></h1>
  <h3 class='no_top_margin'>Hijo</h3>

 <div class="seccion">
    <%= simple_form_for [current_school, current_family, current_child] do |f| %>
      <div class="col-xs-12 col-md-6">
        <div class="col-md-10">
          <%= f.input :nombre, input_html: { class: 'input-sm' } %>
          <br />
        </div>
        <div class="clearfix"></div>
        
        <div class="col-md-10">
          <%= f.input :tipo_servicio, as: :select, collection: Child::TIPO_SERVICIOS, label: 'Tipo de Servicio' %>
          <br />
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="clearfix"></div>
        <div class="col-md-10">
          <%= f.input :grado, as: :select, collection: Child::GRADOS %>
          <br />
        </div>
        
        <div class="col-md-10">
          <%= f.input :division, label: 'DivisiÃ³n', input_html: { class: 'input-sm' } %>
          <br />
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="col-xs-12">
        <div class="col-md-11">
          <%= f.input :comentario, input_html: { class: 'input-sm' } %>
          <br />
        </div>
        <div class="clearfix"></div>
        <br /> 
      </div>

      <div>  
        <br /><br />
        <div class="pull-right">
          <%= link_to school_family_path(current_school, current_family), class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-remove"></span> 
            Cancelar
          <% end %>
        
          <%= button_tag(type: 'submit', class: 'btn btn-primary separate_btn') do %>
            <span class="glyphicon glyphicon-ok"></span>
            Modificar
          <% end %>
        </div>
      </div>
      <div class="clearfix"></div>
    <% end %>
  </div> 
</div>